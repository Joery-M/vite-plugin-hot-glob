{
    "include": ["./src/**/*.ts", "./types/estree.d.ts", "./eslint.config.mjs"],
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedDeclarations": false,
        "isolatedModules": false,
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist",
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"]
    },
    "exclude": ["dist", "test"],
    "references": [
        {
            "path": "./tsconfig.test.json"
        }
    ]
}
